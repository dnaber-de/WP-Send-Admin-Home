<phpunit
	bootstrap="bootstrap.dist.php"
	backupGlobals="false"
	colors="true"
	convertErrorsToExceptions="true"
	convertNoticesToExceptions="true"
	convertWarningsToExceptions="true"
	>
	<testsuites>
		<testsuite name="Unit Tests">
			<directory prefix="" suffix="Test.php">./Test/</directory>
		</testsuite>
	</testsuites>
</phpunit>
